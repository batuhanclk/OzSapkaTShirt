@model OzSapkaTShirt.Models.Order

@{
    ViewData["Title"] = "Details";
}
<script>
    function UpDateBasket(data) {
        var basketCount = 0;
        var i;

        for (i = 0; i < data.orderProducts.length; i++) {
            basketCount = basketCount + data.orderProducts[i].quantity;
        }
        $("#basketCount").html(basketCount);
    }
    function AddToBasket(productId,quantity,addReMove) {
        $.post("@Url.Action("UpDateBasket","OrderProducts")/" + productId + "?quantity="+quantity, UpDateBasket, "json");
            }
</script>

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
